<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Accessibility Code"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="30sp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:contentDescription="Close Dialog"
            android:src="@drawable/baseline_close_24"
            android:id="@+id/close"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/code">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="7"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Make sure that links can be easily navigated, activable and can this can be also done via Rotor as part of the TalkBack."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Use 'URLSpan' or 'Linkify' to provide the link role."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Do not have more than one link within a paragraph, as TalkBack/Screen reader can only access one(first) link within a paragraph."/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Lastly, make sure that links clearly explain they are external links and this should also be announced as part of the link accessible name. This can be achieved by 'contentDescription'."/>

    </LinearLayout>

</LinearLayout>