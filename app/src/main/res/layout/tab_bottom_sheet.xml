<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Accessibility Code"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="24sp"
            android:accessibilityHeading="true"/>

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Close Dialog"
            android:src="@drawable/baseline_close_24"
            android:id="@+id/close"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/code">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabCode1"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Aliquam bibendum volutpat neque, nec hendrerit eros commodo vel. Aenean lobortis finibus hendrerit. Fusce euismod lectus nec eros sollicitudin luctus."/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabCode2"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Aliquam bibendum volutpat neque, nec hendrerit eros commodo vel. Aenean lobortis finibus hendrerit. Fusce euismod lectus nec eros sollicitudin luctus."/>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tabCode3"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Aliquam bibendum volutpat neque, nec hendrerit eros commodo vel. Aenean lobortis finibus hendrerit. Fusce euismod lectus nec eros sollicitudin luctus."/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>