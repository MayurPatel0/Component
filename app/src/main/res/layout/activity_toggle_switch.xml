<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.toggleSwitch"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/switchToolbar"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:navigationContentDescription="Back to Home page"
            android:layout_gravity="center"
            app:title="Switch"
            app:titleTextColor="@color/white"
            android:accessibilityHeading="true" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wi-Fi"
            android:paddingHorizontal="100dp"
            android:textColor="@color/black"
            android:textSize="18sp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toggleSwitch"
            android:contentDescription="WiFi"
            app:useMaterialThemeColors="true"/>

    </LinearLayout>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:checked="false"
        android:textOn="Wi-Fi turned On"
        android:textOff="Wi-Fi turned off"
        android:background="@color/design_default_color_primary"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="80dp"
        android:text="Code"
        android:contentDescription="Code, opens in a bottom sheet"
        android:id="@+id/toggleCode"
        app:icon="@drawable/baseline_keyboard_arrow_down_24" />



</LinearLayout>