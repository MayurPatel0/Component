<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="Accessibility Code"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="30sp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:contentDescription="Close Dialog"
            android:src="@drawable/baseline_close_24"
            android:id="@+id/close"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/code">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="7"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Make sure that radio elements always have a programmatically determined name, role and state. Remember radio buttons are mutually exclusive, and users should be only allowed to check or uncheck them dependent on other radio buttons within the group."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="The radio programmatic name should match the visible label on screen, and can be provided via 'android:text' or 'android:labelFor'."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="The native 'RadioButton' widget already announces appropriate role of radio button."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="3"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="The native 'RadioButton' widget appropriately announces the current state of the radio button, whether it is checked/unchecked and updates automatically."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Additionally, make sure that the radio control and radio label do not receive individual focus. As this can cause confusion to screen reader users. Use 'RelativeLayout' or 'LinearLayout' to group parent and child elments appropriately."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Lastly, make sure that the radio buttons are appropriately grouped using 'RadioGroup' As, this will signpost users on the number of radio buttons and allow them make appropriate selection."/>

    </LinearLayout>

</LinearLayout>